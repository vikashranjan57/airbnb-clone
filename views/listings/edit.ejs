<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/css/style.css">

<body>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Edit your listings</h3>

    <form method="post" action="/listings/<%= listing._id%>?_method=PUT" class="needs-validation"  enctype="multipart/form-data"  novalidate> 
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="Listing[title]" value="<%= listing.title %>" class="form-control" required >
            <div class="valid-feedback">title looks good😊</div>
            <div class="invalid-feedback">please enter title🧐</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="Listing[description]"  class="form-control" required><%= listing.description %></textarea>
            <div class="valid-feedback">description looks good😊</div>
            <div class="invalid-feedback">please enter description🧐</div>
        </div>

<div class="mb-3">
      original listing image <br>
      <img src="<%= originalUrl %>" alt="">
</div>



      <div class="mb-3">
        <label for="image" class="label">Image</label>
        <input type="file" name="Listing[image]"  class="form-control" required >
       
      </div>

      <div class="row">
        <div class="mb-3 col-md-3 ">
            <label for="price" class="label">Price</label>
            <input type="text" name="Listing[price]" value="<%= listing.price %>" class="form-control" required>
            <div class="valid-feedback">price looks good😊</div>
            <div class="invalid-feedback">please enter price🧐</div>
        </div>
        <div class="mb-3 col-md-9">
            <label for="location" class="label">Location</label>
            <input type="text" name="Listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="valid-feedback">location looks good😊</div>
            <div class="invalid-feedback">please enter location🧐</div>
        </div> 
    </div>
        
        <div class="mb-3">
            <label for="country" class="label">Country</label>
            <input type="text" name="Listing[country]" value="<%= listing.country %>" class="form-control" required>
            <div class="valid-feedback">conntry looks good😊</div>
            <div class="invalid-feedback">please enter country🧐</div>
        </div>

        <br>
        <button class="btn btn-dark edit-btn">edit</button>

    </form>
     <br>
 
    </div>
</div>


</body>

